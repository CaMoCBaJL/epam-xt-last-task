@using WebPL.Models;
@using Dependencies;
@using DataValidator;

@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    if (DependencyResolver.Instance.BL.UserLogic.RemoveEntity(EntityToDeleteData.EntityId))
    {
        EntityToDeleteData.DeletionResult = Constants.allOk;

        FormsAuthentication.SignOut();
    }
    else
    {
        EntityToDeleteData.DeletionResult = Constants.serverError;
    }

    Response.Redirect("~/Index.cshtml");
}

